@model int
@{
    ViewData["Title"] = "_ButtonPartial";
}


<td style="width:150px">
    <div class="btn-group">
        <a asp-action="Edit" asp-controller="ProductTypes" class="btn btn-primary" asp-route-id="@Model"><i class="fa-solid fa-pen-to-square"></i></a>
        <a asp-action="Details" asp-controller="ProductTypes" class="btn btn-info" asp-route-id="@Model"><i class="fa-solid fa-list"></i></a>
        <a asp-action="Delete" asp-controller="ProductTypes" class="btn btn-danger" asp-route-id="@Model"><i class="fa-sharp fa-solid fa-trash"></i></a>
    </div>
</td>

