@model OnlineShop.Models.SpecialTag
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h2 class="text-info">Delete Product Type</h2>
<form asp-action="Delete" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-group">
            <div class="col-2 mb-2">
                <label asp-for="SpeciaTag"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="SpeciaTag" class="form-control" placeholder="Enter special tag" />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
            <a class="btn btn-sm btn-success m-2" asp-controller="SpecialTag" asp-action="Index">BackTo List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


