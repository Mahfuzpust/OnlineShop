@model IEnumerable<OnlineShop.Models.AllProduct>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h1 class="text-center text-primary">Product Type List</h1>
            <a class="btn btn-sm btn-primary m-2" asp-controller="AllProduct" asp-action="Create"> <i class="fa-sharp fa-solid fa-plus"></i>Add New Product</a>
            <table class="table table-success">
                <tr class="text-center">
                    <th>Id</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>ProductColor</th>
                    <th>IsAvailable</th>
                    <th>ProductTypes</th>
                    <th></th>
                    <th>Action</th>
                </tr>
                @foreach (var data in Model)
                {
                    <tr class="text-center">
                        <td>@data.Id</td>
                        <td>@data.Name</td>
                        <td>@data.Price</td>
                        <td>@data.ProductColor</td>
                        <td>@data.IsAvailable</td>
                        <td>@data.ProductTypes</td>
                        @*<td>
                            <partial name="_ButtonPartial" model="@data.Id" />
                        </td>*@
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

