@model OnlineShop.Models.AllProduct
@{
    ViewData["Title"] = "Create";
}


<h2>Create Product </h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        
        <div class="form-group">
            <div class="col-2 mb-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-4">
                <input type="text" asp-for="Name" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Name" class="text-danger"></span>

        <div class="form-group">
            <div class="col-2 mb-2">
                <label asp-for="Price"></label>
            </div>
            <div class="col-4">
                <input type="number" asp-for="Price" class="form-control"/>
            </div>
        </div>
        <span asp-validation-for="Price" class="text-danger"></span>

        <div class="form-group">
            <div class="col-2 mb-2">
                <label asp-for="Image"></label>
            </div>
            <div class="col-4">
                <input type="file" asp-for="Image" class="form-control"/>
            </div>
        </div>
        <span asp-validation-for="Image" class="text-danger"></span>

        <div class="form-group">
            <div class="col-2 mb-2">
                <label asp-for="ProductColor"></label>
            </div>
            <div class="col-4">
                <input type="text" asp-for="ProductColor" class="form-control"/>
            </div>
        </div>
        <span asp-validation-for="ProductColor" class="text-danger"></span>

        <div class="form-group">
            <div class="col-2 mb-2">
                <label asp-for="ProductTypeId"></label>
            </div>
            <div class="col-4">
                @*<input asp-for="ProductTypeId" class="form-control"/>*@
                <select asp-for="ProductTypeId" asp-items="ViewBag.ProductTypeId" class="form-control"></select>
            </div>
        </div>
        <span asp-validation-for="ProductTypeId" class="text-danger"></span>

        <div class="form-group">
            <div class="col-2 mb-2">
                <label asp-for="SpecialTagId"></label>
            </div>
            <div class="col-4">
                @*<input type="text" asp-for="SpecialTagId" class="form-control"/>*@
                <select asp-for="SpecialTagId" asp-items="ViewBag.SpecialTagId" class="form-control"></select>
            </div>
        </div>
        <span asp-validation-for="SpecialTagId" class="text-danger"></span>
        <br />
        <div class="form-group row">
            <div class="col-1 mb-2">
                <label asp-for="IsAvailable"></label>
            </div>
            <div class="col-1">
                <input type="checkbox" asp-for="IsAvailable"/>
            </div>
        </div>
        <span asp-validation-for="IsAvailable" class="text-danger"></span>

        <div class="form-group">
            <input type="submit" value="save" class="btn btn-sm btn-primary" />
            <a class="btn btn-sm btn-success m-2" asp-controller="AllProduct" asp-action="Index">BackTo List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

