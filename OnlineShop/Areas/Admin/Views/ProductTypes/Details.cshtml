@model OnlineShop.Models.ProductTypes
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<h2 class="text-info">Product Types Details</h2>
<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-group">
            <div class="col-2 mb-2">
                <label asp-for="ProductType"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="ProductType" readonly="readonly" class="form-control" placeholder="Enter product type" />
            </div>
        </div>
        <span asp-validation-for="ProductType" class="text-danger"></span>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-success">Edit</a>
            <a class="btn btn-sm btn-success m-2" asp-controller="ProductTypes" asp-action="Index">BackTo List</a>
        </div>
    </div>
</form>

