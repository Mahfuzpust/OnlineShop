@model OnlineShop.Models.ProductTypes
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>


<h2>Create Product Type</h2>
<form asp-action="Create" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group">
            <div class="col-2 mb-2">
                <label asp-for="ProductType"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="ProductType" class="form-control" placeholder="Enter product type" />
            </div> 
        </div>
         <span asp-validation-for="ProductType" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="save" class="btn btn-sm btn-primary" />
                <a class="btn btn-sm btn-success m-2" asp-controller="ProductTypes" asp-action="Index">BackTo List</a>
            </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

